{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "See ADR-003 for required_flow conditional validation rationale",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "version",
    "id",
    "epic_id",
    "title",
    "priority",
    "status",
    "dod_id",
    "execution"
  ],
  "properties": {
    "version": {"type": "integer"},
    "id": {"type": "string", "pattern": "^WO-[A-Za-z0-9.-]+$"},
    "epic_id": {"type": "string", "pattern": "^E-[A-Za-z0-9-]+$"},
    "title": {"type": "string"},
    "priority": {"type": "string", "pattern": "^(P[0-3]|critical|high|medium|low)$"},
    "status": {"type": "string", "enum": ["pending", "running", "done", "failed", "partial"]},
    "owner": {"type": ["string", "null"]},
    "branch": {"type": ["string", "null"]},
    "worktree": {"type": ["string", "null"]},
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allow", "deny"],
      "properties": {
        "allow": {"type": "array", "items": {"type": "string"}},
        "deny": {"type": "array", "items": {"type": "string"}}
      },
      "patternProperties": {"^x_": {}}
    },
    "deliverables": {"type": "array", "items": {"type": "string"}, "additionalProperties": true},
    "verify": {
      "type": "object",
      "additionalProperties": true,
      "required": ["commands"],
      "properties": {
        "commands": {"type": "array", "items": {"type": "string"}}
      },
      "patternProperties": {"^x_": {}}
    },
    "execution": {
      "type": "object",
      "additionalProperties": false,
      "required": ["engine", "required_flow", "segment"],
      "properties": {
        "engine": {"type": "string", "enum": ["trifecta"]},
        "segment": {"type": "string", "enum": ["."]},
        "required_flow": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 1,
          "$comment": "Full validation applied conditionally in allOf below"
        },
        "x_legacy_flow": {
          "type": "boolean",
          "$comment": "Marker for WOs completed before full required_flow enforcement (see ADR-003)"
        }
      }
    },
    "diff_budget": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "max_files": {"type": "integer"},
        "max_loc": {"type": "integer"}
      }
    },
    "stop_conditions": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "max_iterations": {"type": "integer"},
        "max_fail_verify": {"type": "integer"}
      }
    },
    "dod_id": {"type": "string"},
    "trace": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "ticket": {"type": ["string", "null"]},
        "related_wos": {"type": "array", "items": {"type": "string"}}
      }
    },
    "claim_links": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "requirements": {"type": "array", "items": {"type": "string"}},
        "assumptions": {"type": "array", "items": {"type": "string"}},
        "constraints": {"type": "array", "items": {"type": "string"}}
      }
    },
    "dependencies": {
      "type": "array",
      "items": {"type": "string"}
    },
    "objective": {"type": "string"},
    "started_at": {"type": ["string", "null"]},
    "finished_at": {"type": ["string", "null"]},
    "result": {"type": ["string", "null"]},
    "commit_sha": {"type": ["string", "null"]},
    "verified_at_sha": {"type": ["string", "null"]},
    "evidence_logs": {"type": "array", "items": {"type": "string"}}
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "status": {"enum": ["pending", "running"]}
        }
      },
      "then": {
        "required": ["execution"],
        "properties": {
          "execution": {
            "properties": {
              "required_flow": {
                "allOf": [
                  {"contains": {"const": "session.append:intent"}},
                  {"contains": {"const": "ctx.sync"}},
                  {"contains": {"const": "ctx.search"}},
                  {"contains": {"const": "ctx.get"}},
                  {"contains": {"const": "session.append:result"}}
                ]
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "status": {"enum": ["done", "failed"]}
        }
      },
      "then": {
        "properties": {
          "execution": {
            "properties": {
              "required_flow": {"minItems": 1}
            }
          }
        }
      }
    }
  ]
}
