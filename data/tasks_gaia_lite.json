{
  "version": 1,
  "description": "GAIA-lite tasks for Trifecta benchmark - verifiable repo tasks",
  "tasks": [
    {
      "id": "task_001",
      "name": "Find TODO comments",
      "prompt": "Find all TODO comments in the codebase and list them with file:line format",
      "acceptance_checklist": [
        "Output contains at least 5 TODO items",
        "Each item has file path and line number",
        "No false positives (non-TODO strings)"
      ],
      "verifiers": [
        {
          "type": "count_min",
          "field": "todo_items",
          "min": 5,
          "description": "At least 5 TODO items found"
        },
        {
          "type": "regex_match",
          "pattern": "[a-zA-Z_/]+\\.\\w+:#\\d+",
          "description": "Items have file:line format"
        }
      ],
      "time_budget_s": 30,
      "constraints": {
        "max_files_edit": 0,
        "readonly": true
      }
    },
    {
      "id": "task_002",
      "name": "Count Python files",
      "prompt": "Count the number of Python files in the src/ directory and its subdirectories",
      "acceptance_checklist": [
        "Output is a single integer",
        "Count is accurate (verify against find)"
      ],
      "verifiers": [
        {
          "type": "command",
          "cmd": "find src/ -name '*.py' | wc -l",
          "expected": "79",
          "comparison": "equals",
          "field": "python_count"
        }
      ],
      "time_budget_s": 30,
      "constraints": {
        "max_files_edit": 0,
        "readonly": true
      }
    },
    {
      "id": "task_003",
      "name": "Find all markdown files",
      "prompt": "Find all .md files in the docs/ directory",
      "acceptance_checklist": [
        "List all markdown files with paths",
        "Include at least 10 files"
      ],
      "verifiers": [
        {
          "type": "count_min",
          "field": "md_files",
          "min": 10,
          "description": "At least 10 markdown files"
        }
      ],
      "time_budget_s": 30,
      "constraints": {
        "max_files_edit": 0,
        "readonly": true
      }
    },
    {
      "id": "task_004",
      "name": "Find function definitions",
      "prompt": "Find all function definitions (def keyword) in src/application/ and list them",
